{
  "name": "@apps/roles",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register ../../node_modules/typeorm/cli -d src/database/datasource",
    "migration:generate": "npm run typeorm -- migration:generate src/database/migrations/roles -p",
    "migration:create": "cross-var ts-node -r tsconfig-paths/register ../../node_modules/typeorm/cli migration:create src/database/migrations/roles",
    "migration:run": "yarn run typeorm migration:run"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.4.2",
    "@nestjs/jwt": "^10.0.3",
    "@nestjs/passport": "^9.0.3",
    "@nestjs/platform-express": "^10.4.2",
    "@types/bcryptjs": "^2.4.2",
    "bcryptjs": "^2.4.3",
    "install": "^0.13.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "randomstring": "^1.2.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@types/jest": "29.2.4",
    "cross-var": "^1.1.0",
    "jest": "29.3.1",
    "ts-jest": "29.0.3",
    "ts-node": "^10.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^libs/(.*)": "<rootDir>../../libs/$1",
      "@app/infra": "<rootDir>../../libs/infra/src/index",
      "^apps/(.*)": "<rootDir>../../apps/$1",
      "@libs/infra/(.*)": "<rootDir>/../../libs/infra/src/$1",
      "@libs/common": "<rootDir>../../libs/common/src",
      "@libs/core": "<rootDir>../../libs/core/src",
      "@libs/redis": "<rootDir>../../libs/redis/src"
    }
  }
}
